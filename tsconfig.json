{
    "compilerOptions": {
        "module"             : "NodeNext",
        "target"             : "ESNext",
        "strictFunctionTypes": true,
        "strict"             : true,
        "esModuleInterop"    : true,
        "moduleResolution"   : "NodeNext",
        "skipLibCheck"       : true,
        "outDir"             : "dist",
        "resolveJsonModule"  : true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}