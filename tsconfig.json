{
    "compilerOptions": {
        "module"             : "NodeNext",
        "target"             : "ESNext",
        "strictFunctionTypes": true,
        "strict"             : true,
        "esModuleInterop"    : true,
        "moduleResolution"   : "NodeNext",
        "skipLibCheck"       : true,
        "outDir"             : "./dist",
        "resolveJsonModule"  : true,
        "sourceMap"          : true,
        "declaration"        : true,
        "declarationDir"     : "./dist",
        "declarationMap"     : true,
        "importHelpers"      : true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}